
{
    "manifest_version": 2,
    "name": "Testing Extension",
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    
    ],
    
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    
    "permissions": ["tabs"],
    
    "browser_action": {
        "default_icon": "frightened.png",
        "default_title": "Slide Show",
        "default_popup": "popup.html"

    }
    
}
